#!/bin/bash

# Kill playback
stream_kill() {
    [ "$1" = "quiet" ] || echo "killing previous stream..."
    killall -q youtube-dl
    killall -q mpv
}
# Intercept SIGINT and SIGTERM
trap stream_kill 2
trap stream_kill 15

# Launch the video in background
stream_bg() {
    notify-send "ï…ª  It's coming..."
    2>/dev/null youtube-dl -q -4 --proxy 127.0.0.1:8123 \
        --cookies "${HOME}/.local/share/ytdl-cookies/youtube.cookie"\
        -o - "$1" | mpv --quiet --no-term-osd-bar \
        --force-seekable=yes --keep-open=yes - >/dev/null 2>&1 &
}

# Launch the video in background
stream_fg() {
    youtube-dl -v -4 --proxy 127.0.0.1:8123 \
        --cookies "${HOME}/.local/share/ytdl-cookies/youtube.cookie"\
        -o - "$1" | mpv -v \
        --force-seekable=yes --keep-open=yes -
}

case "$1" in
    -f)
        shift
        stream_fg "$1"
        ;;
    *)
        stream_bg "$1"
        ;;
esac
