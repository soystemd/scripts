#!/bin/zsh

# Config
zsh_config_dir="${HOME}/.config/zsh"

# Check if user's shell is zsh
[ "$SHELL" = "/usr/bin/zsh" ] || (echo "error: your shell is not zsh"; exit 1)

# Help message
help="Check out the 'zsh-config' script to understand what's going on."

# Parse given arguments
case "$1" in

    zsh | z | zshrc | .zshrc | rc | rice)
        $EDITOR "${zsh_config_dir}/.zshrc"
        ;;

    alias | al | a | aliases)
        $EDITOR "${zsh_config_dir}/alias.zsh"
        ;;

    update | up | u)
        $EDITOR "${zsh_config_dir}/update.zsh"
        ;;

    function | func | fn | f | functions)
        $EDITOR "${zsh_config_dir}/function.zsh"
        ;;

    binding | bind | bn | b)
        $EDITOR "${zsh_config_dir}/binding.zsh"
        ;;

    bookmark | bm | bookmarks)
        $EDITOR "$BOOKMARKS_FILE"
        ;;

    *)
        echo "$help"
        ;;
esac
exit 0
